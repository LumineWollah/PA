{% extends 'backend/base.html.twig' %}

{% block title %}Liste des intervenants{% endblock %}

{% block body %}
<script>
    $(document).ready( function () {
        $('#crudList').DataTable( {
            buttons: true,
            pageLength: 10,
            layout: {
                topStart: {
                    search: {
                        placeholder: "Rechercher...",
                        search: ""
                    }
                },
                topEnd: 'buttons',
                bottomStart: 'paging',
                bottomEnd: 'info',
            },
            language: {
                search: "",
                info: "Affichage des entrées _START_ à _END_ sur _TOTAL_ au total",
            },
            buttons: [
                'pdf'
            ],
            columnDefs: [
                {
                    targets: 3,
                    className: 'dt-body-left dt-head-left'
                },
                {
                    targets: -1,
                    orderable: false,
                }   
            ]
        } );
    } );
</script>
    <div class="col-10 p-0">
        <div class="p-3">
            <h1>Liste des intervenants</h1>
            <h4>Non validés:</h4>
            <div class="container">
                <div class="row row-cols-auto">
                {% for provider in providers %}
                    <div class="col">
                        <p>{{ provider.firstname }} {{ provider.lastname }}</p>
                        <p>Inscrit le : {{ provider.dateInscription | date('d/m/Y H:i:s') }}</p>
                        <p>Email : {{ provider.email }}</p>
                        <p>Téléphone : {{ provider.telNumber }}</p>
                        <p>Voir plus</p>
                        <button>Valider</button>
                        <button>Refuser</button>
                    </div>
                {% endfor %}
                </div>
              </div> 
            <h4>Validés:</h4>
            <table id="crudList" class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Prénom</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Email</th>
                        <th scope="col">Téléphone</th>
                        <th scope="col">Inscrit le</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for provider in providers %}
                        <tr>
                            <td>{{ provider.firstname }}</td>
                            <td>{{ provider.lastname }}</td>
                            <td>{{ provider.email }}</td>
                            <td class="">{{ provider.telNumber }}</td>
                            <td>{{ provider.dateInscription | date('d/m/Y H:i:s') }}</td>
                            <td>
                                <a href="{{ path('providerDelete', {'id': provider.id}) }}" class="btn" style="background-color: #EE3939;"><img style="width:20px;height:20px;" src="https://cdn-icons-png.freepik.com/512/1345/1345874.png"></a>
                                <form action="{{ path('providerEdit') }}" method="post" style="display: inline;">
                                    <input type="hidden" name="provider" value="{{ provider|json_encode }}">
                                    <button type="submit" class="btn" style="background-color: #18A0FB;"><img style="width:20px;height:20px;" src="https://upload.wikimedia.org/wikipedia/commons/thumb/6/64/Edit_icon_%28the_Noun_Project_30184%29.svg/2048px-Edit_icon_%28the_Noun_Project_30184%29.svg.png"></button>
                                </form>
                                <form action="{{ path('providerShow') }}" method="post" style="display: inline;">
                                    <input type="hidden" name="provider" value="{{ provider|json_encode }}">
                                    <button type="submit" class="btn" style="background-color: #A594F9;"><img style="width:20px;height:17px;" src="https://static-00.iconduck.com/assets.00/show-icon-512x410-5ofq0plr.png"></button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

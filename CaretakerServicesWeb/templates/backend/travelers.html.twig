{% extends 'backend/base.html.twig' %}

{% block activeGest %}active{% endblock %}
{% block activeTrav %}active{% endblock %}

{% block title %}Liste des voyageurs{% endblock %}

{% block body %}
<script>
    $(document).ready( function () {
        $('#crudList').DataTable( {
            buttons: true,
            pageLength: 10,
            layout: {
                topStart: {
                    search: {
                        placeholder: "Rechercher...",
                        search: ""
                    }
                },
                topEnd: 'buttons',
                bottomStart: 'paging',
                bottomEnd: 'info',
            },
            language: {
                search: "",
                info: "Affichage des entrées _START_ à _END_ sur _TOTAL_ au total",
            },
            buttons: [
                'pdf'
            ],
            columnDefs: [
                {
                    targets: 3,
                    className: 'dt-body-left dt-head-left'
                },
                {
                    targets: -1,
                    orderable: false,
                }   
            ]
        } );
    } );
</script>
    <div class="col-10 p-0">
        <div class="p-3">
            <h1>Liste des voyageurs</h1>
            <table id="crudList" class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Prénom</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Email</th>
                        <th scope="col">Téléphone</th>
                        <th scope="col">Inscrit le</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for traveler in travelers %}
                        <tr>
                            <td>{{ traveler.firstname }}</td>
                            <td>{{ traveler.lastname }}</td>
                            <td>{{ traveler.email }}</td>
                            <td>{{ traveler.telNumber }}</td>
                            <td>{{ traveler.dateInscription | date('d/m/Y H:i:s') }}</td>
                            <td>
                                <a href="{{ path('travelerDelete', {'id': traveler.id}) }}" class="btn" style="background-color: #EE3939;"><img style="width:20px;height:20px;" src="https://cdn-icons-png.freepik.com/512/1345/1345874.png"></a>
                                <form action="{{ path('travelerEdit') }}" method="post" style="display: inline;">
                                    <input type="hidden" name="traveler" value="{{ traveler|json_encode }}">
                                    <button type="submit" class="btn" style="background-color: #18A0FB;"><img style="width:20px;height:20px;" src="https://upload.wikimedia.org/wikipedia/commons/thumb/6/64/Edit_icon_%28the_Noun_Project_30184%29.svg/2048px-Edit_icon_%28the_Noun_Project_30184%29.svg.png"></button>
                                </form>
                                <form action="{{ path('travelerShow') }}" method="post" style="display: inline;">
                                    <input type="hidden" name="traveler" value="{{ traveler|json_encode }}">
                                    <button type="submit" class="btn" style="background-color: #A594F9;"><img style="width:20px;height:17px;" src="https://static-00.iconduck.com/assets.00/show-icon-512x410-5ofq0plr.png"></button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}


<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
        <script src="https://cdn.datatables.net/2.0.3/js/dataTables.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>
        <script src="https://cdn.datatables.net/v/dt/dt-2.0.3/b-3.0.1/b-html5-3.0.1/sc-2.4.1/datatables.js"></script>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.datatables.net/2.0.3/css/dataTables.dataTables.css">
        <link rel="stylesheet" href={{ asset('styles/base_crud.css') }}>
        {% block stylesheets %}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg mt-0" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <img src="{{ asset('icons/logo/2_white_mode.png') }}" alt="Logo" width="40" height="40" class="d-inline-block align-text-center me-2">
                    Caretaker Services - Panel administrateur
                </a>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link me-1 btnSite" aria-current="page" href={{ path('home') }}>Aller sur le site</a>
                    </li>
                </ul>
            </div>
        </nav>

        <div class="row mainRow">
            <div class="col-2 p-0">
                <div class="d-flex flex-column p-3 sticky-top sideBar">
                    <ul class="nav nav-pills flex-column mb-auto navUl">
                        <li class="nav-item">
                            <a href={{ path('dashboard') }} class="nav-link {% block activeDash %}{% endblock %}" id="dashboard" aria-current="page">
                                Dashboard
                            </a>
                        </li>
                        <li>
                            <button class="btn btn-toggle border-0 gestionBtn collapsed {% block activeGest %}{% endblock %}" data-bs-toggle="collapse" data-bs-target="#dashboard-collapse" aria-expanded="false">
                                Gestion
                            </button>
                            <div class="collapse menuGestion" id="dashboard-collapse" >
                                <ul class="btn-toggle-nav list-unstyled fw-normal small gestionUl">
                                    <li><a href={{ path('lessorList') }} class="d-inline-flex text-decoration-none rounded mb-1 {% block activeLess %}{% endblock %}">Bailleurs</a></li>
                                    <li><a href={{ path('providerList') }} class="d-inline-flex text-decoration-none rounded mb-1 {% block activeProv %}{% endblock %}">Prestataires</a></li>
                                    <li><a href={{ path('travelerList') }} class="d-inline-flex text-decoration-none rounded mb-1 {% block activeTrav %}{% endblock %}">Voyageurs</a></li>
                                    <li><a href={{ path('adminList') }} class="d-inline-flex text-decoration-none rounded mb-1 {% block activeAdm %}{% endblock %}">Administrateurs</a></li>
                                    <li><a href={{ path('apartmentCrud') }} class="d-inline-flex text-decoration-none rounded mb-1 {% block activeApar %}{% endblock %}">Logements</a></li>
                                    <li><a href={{ path('companyList') }} class="d-inline-flex text-decoration-none rounded mb-1 {% block activeComp %}{% endblock %}">Entreprises</a></li>
                                    <li><a href={{ path('documentList') }} class="d-inline-flex text-decoration-none rounded mb-1 {% block activeDocu %}{% endblock %}">Documents</a></li>
                                    <li><a href={{ path('serviceList') }} class="d-inline-flex text-decoration-none rounded mb-1 {% block activeServ %}{% endblock %}">Services</a></li>
                                    <li><a href={{ path('reservationList') }} class="d-inline-flex text-decoration-none rounded mb-1 {% block activeRese %}{% endblock %}">Réservations</a></li>
                                    <li><a href={{ path('categoryList') }} class="d-inline-flex text-decoration-none rounded mb-1 {% block activeCate %}{% endblock %}">Catégories</a></li>
                                    <li><a href={{ path('addonList') }} class="d-inline-flex text-decoration-none rounded mb-1 {% block activeAddo %}{% endblock %}">Addons</a></li>
                                    <li><a href={{ path('reviewList') }} class="d-inline-flex text-decoration-none rounded mb-1 {% block activeRev %}{% endblock %}">Avis</a></li>
                                </ul>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a href="https://caretakerservices.s3.eu-west-2.amazonaws.com/PCS_Ticketing.zip" class="nav-link" aria-current="page">
                                Application de ticketing
                            </a>
                        <hr class="mx-auto opacity-100">
                    </ul>
                </div>
            </div>
        {% block body %}{% endblock %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>

{% extends 'backend/base.html.twig' %}

{% block activeGest %}active{% endblock %}
{% block activeRese %}active{% endblock %}

{% block title %}Créer une réservation{% endblock %}

{% block body %}
    <div class="col-10 p-0">
        <div class="p-3">
            <h1>Créer une réservation</h1>
            {{form_start(form)}}
                <div class="inputDiv" style="position: relative;">
                    {{form_widget(form.startingDate)}}
                </div>
                <div class="inputDiv" style="position: relative;">
                    {{form_widget(form.endingDate)}}
                </div>
                <div class="inputDiv" style="position: relative;">
                    {{form_widget(form.price)}}
                </div>
                <div class="inputDiv" style="position: relative;">
                    {{form_widget(form.service)}}
                </div>
                <div class="inputDiv" style="position: relative;">
                    {{form_widget(form.apartment)}}
                </div>
                <div class="inputDiv" style="position: relative;">
                    {{form_widget(form.client)}}
                </div>
                <div class="inputDiv" style="position: relative;">
                    {{ form_label(form.isRequest) }}
                    {{form_widget(form.isRequest)}}
                </div>
                <button type="submit" class="btn">Créer</button>
            {{form_end(form)}}
        </div>
    </div>
{% endblock %}
{% extends 'backend/base.html.twig' %}

{% block stylesheets %}<link rel="stylesheet" href={{ asset('styles/crud.css') }}>{% endblock %}

{% block activeGest %}active{% endblock %}
{% block activeApar %}active{% endblock %}

{% block title %}Liste des appartements{% endblock %}

{% block body %}
<script>
    $(document).ready( function () {
        $('#crudList').DataTable( {
            buttons: true,
            pageLength: 10,
            layout: {
                topStart: {
                    search: {
                        placeholder: "Rechercher...",
                        search: ""
                    }
                },
                topEnd: 'buttons',
                bottomStart: 'paging',
                bottomEnd: 'info',
            },
            language: {
                search: "",
                info: "Affichage des entrées _START_ à _END_ sur _TOTAL_ au total",
            },
            buttons: [
                'pdf'
            ],
            columnDefs: [
                {
                    targets: 3,
                    className: 'dt-body-left dt-head-left'
                },
                {
                    targets: -1,
                    orderable: false,
                }   
            ]
        } );
    } );
</script>
    <div class="col-10 p-0">
        <div class="p-3">
            <h1>Liste des appartements</h1>
            <div class="container m-0 mb-4">
                <div class="row">
                {% for apartment in apartments %}
                    <div class="col-3 p-0 me-4">
                        <div class="container">
                            <p class="name">{{ apartment.name|capitalize }}</p>
                            <p class="otherData inscription"><b>Créé le :</b> {{ apartment.dateCreation|date('d/m/Y H:i:s') }}</p>
                            <p class="otherData"><b>Description :</b> {{ apartment.description }}</p>
                            <p class="otherData"><b>Chambres :</b> {{ apartment.bedrooms }}</p>
                            <p class="otherData"><b>Voyageurs max :</b> {{ apartment.travelersMax }}</p>
                            <p class="otherData"><b>Superficie :</b> {{ apartment.area }}</p>
                            <p class="otherData"><b>Prix :</b> {{ apartment.price }}€</p>
                            <p class="otherData"><b>Adresse :</b> {{ apartment.address }}</p>
                            <p class="otherData"><b>Code postal :</b> {{ apartment.postalCode }}</p>
                            <p class="otherData"><b>Ville :</b> {{ apartment.city }}</p>
                            <p class="otherData"><b>Pays :</b> {{ apartment.country }}</p>
                            <form action="{{ path('apartmentShow') }}" method="post" style="display: inline;">
                                <input type="hidden" name="apartment" value="{{ apartment|json_encode }}">
                                <button type="submit" class="seeMore" style="background-color: #A594F9;">Voir plus</button>
                            </form>
                        </div>
                    </div>
                {% endfor %}
                </div>
              </div>
        </div>
    </div>
{% endblock %}

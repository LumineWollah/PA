{% extends 'frontend/base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href={{ asset('styles/frontend/apartments/apartmentDetail.css') }}>
    <link href="https://api.mapbox.com/mapbox-gl-js/v3.2.0/mapbox-gl.css" rel="stylesheet">
    <script src="https://api.mapbox.com/mapbox-gl-js/v3.2.0/mapbox-gl.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/jquery/latest/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />
{% endblock %}

{% block activeApar %}active{% endblock %}

{% block body %}
<div class="container-fluid pageContent">
    <div class="row">
        <div class="mainImg p-0">
            <img src={{ apartment.mainPict }}>
        </div>
    </div>
    <div class="mainInfos">
        <div class="row">
            <div class="col-7">
                <h1>{{ apartment.name }}</h1>
                <div class="apartDescDiv">
                    <p class="apartDesc"><b>Description : </b>{{ apartment.description }}</p>
                </div>
                <div class="modal fade" id="exampleModalLive" tabindex="-1" aria-labelledby="exampleModalLiveLabel" style="display: none;" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-scrollable .modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="exampleModalLiveLabel">Description</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
                            </div>
                            <div class="modal-body">
                                <p>{{ apartment.description }}</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                            </div>
                        </div>
                    </div>
                </div>
                <button type="button" class="btn readMoreBtn" data-bs-toggle="modal" data-bs-target="#exampleModalLive">
                    LIRE PLUS
                </button>
            </div>
            <div class="col-5 caractColumn align-items-center">
                <div class="caract">
                    <h4>Caractéristiques</h4>
                    <ul>
                        <li>Type de bien : <b>{{ (apartment.isHouse == 1) ? 'Maison' : 'Appartement' }}</b></li>
                        <li>Type de location : <b>{{ (apartment.isFullhouse == 1) ? 'Logement entier' : 'Chambre privée' }}</b></li>
                        <li>Nombre de chambre : <b>{{ apartment.bedrooms }} chambre{{ (apartment.bedrooms > 1) ? 's' : ''}}</b></li>
                        <li>Nombre de voyageur : <b>{{ apartment.travelersMax }} voyageur{{ (apartment.travelersMax > 1) ? 's' : ''}}</b></li>
                        <li>Surface : <b>{{ apartment.area }} m²</b></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-2 lessorTinyProfile">
                <img src={{ asset('icons/profile_pict_default.png') }}>
                <div class="textName">
                    <p><b>Hôte :</b> Francis Lalanne</p>
                    <p class="inscription">Inscrit depuis 6 ans</p>
                </div>
            </div>
        </div>
        <hr>
        <div class="row reservation justify-content-center">
            <h2>Réservation</h2>
            {{form_start(form)}}
            <div class="row reservationRow">
                <div class="col-6 leftFormContainer">
                    <div class="leftForm">
                        <p class="reservTitle">Date de votre voyage</p>
                        {{ form_widget(form.startingDate) }}
                        <p class="reservTitle mt-4">Nombre de voyageurs</p>
                        <div class="leftFormRow">
                            <div class="leftFormCol">
                                <p class="reservSubtitle">Adultes (18+) :</p>
                                {{ form_widget(form.adultTravelers) }}
                            </div>
                            <div class="leftFormCol">
                                <p class="reservSubtitle">Enfants (2+) :</p>
                                {{ form_widget(form.childTravelers) }}
                            </div>
                            <div class="leftFormCol">
                                <p class="reservSubtitle">Bébé (0+) :</p>
                                {{ form_widget(form.babyTravelers) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-3">
                    <div class="middleForm">
                        <p class="reservTitle">Montant</p>
                        <div class="secondColRow"><p class="">{{ apartment.price }}€ x 0 nuits</p><p><b>0 €</b></p></div>
                        <div class="secondColRow"><p class="">Frais de services</p><p><b>0 €</b></p></div>
                        <div class="secondColRow"><p class="">Taxes</p><p><b>0 €</b></p></div>
                        <p class="reservTitle mt-4">Vos prestations</p>
                        <button type="button" class="btn addPrestaBtn" data-bs-toggle="modal" data-bs-target="#exampleModalLive">
                            Ajouter une prestation
                        </button>
                    </div>
                </div>
                <div class="col-3">
                    <div class="rightForm">
                        <p class="reservTitle">Total</p>
                        <p class="totalText">0€ pour 0 nuit</p>
                        <button type="submit" class="reservBtn">Réserver</button>
                    </div>
                </div>
            </div>
            {{form_end(form)}}
        </div>
        <hr>
        <div class="row photosCaroussel justify-content-center">
            <h2>Autres photos</h2>
            <div id="carouselExampleIndicators" class="carousel slide">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                    {% for i in range(1, (apartment.pictures|length)-1) %}
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to={{ i }} aria-label="Slide {{ i + 1 }}"></button>
                    {% endfor %}
                </div>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src={{ apartment.pictures[0] }} class="d-block w-100 carouselImg" alt="...">
                    </div>
                    {% for img in apartment.pictures[1:] %}
                        <div class="carousel-item">
                            <img src={{ img }} class="d-block w-100 carouselImg" alt="...">
                        </div>
                    {% endfor %}
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                    <img src={{ asset('icons/arrow_left.png') }} class="arrow leftAr">
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                    <img src={{ asset('icons/arrow_right.png') }} class="arrow rightAr">
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
        <hr>
        <div class="row localisation justify-content-center">
            <h2>Localisation</h2>
            <div id="map"></div>
        </div>
        <hr>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>

    const rangesTab = {{ datesRangeReservs|json_encode|raw }};
    
    $(function() {
        $('input[id="form_startingDate"]').daterangepicker({
            autoUpdateInput: false,
            autoApply: true,
            locale: {
                cancelLabel: 'Clear',
            },
            isInvalidDate: function(date) {
                var dateString = date.format('YYYY-MM-DD');
                for (var i = 0; i < rangesTab.length; i++) {
                    var startDate = moment(rangesTab[i][0], 'YYYY-MM-DD');
                    var endDate = moment(rangesTab[i][1], 'YYYY-MM-DD');
                    if (date.isBetween(startDate, endDate, null, '[]')) {
                        return true;
                    }
                }
                return false;
            }
        }, function(start, end, label) {
            $(this).val(start.format('YYYY.MM.DD') + " - " + end.format('YYYY.MM.DD'));
            console.log("A new date selection was made: " + start.format('YYYY-MM-DD') + ' to ' + end.format('YYYY-MM-DD'));

        }).on('apply.daterangepicker', function(ev, picker) {
            $(this).val('Du ' + picker.startDate.format('DD/MM/YYYY') + ' au ' + picker.endDate.format('DD/MM/YYYY'));
            var startDate = picker.startDate;
            var endDate = picker.endDate;
            for (var i = 0; i < rangesTab.length; i++) {
                var rangeStartDate = moment(rangesTab[i][0], 'YYYY-MM-DD');
                var rangeEndDate = moment(rangesTab[i][1], 'YYYY-MM-DD');
                if (rangeStartDate.isBetween(startDate, endDate, null, '[]') || rangeEndDate.isBetween(startDate, endDate, null, '[]')) {
                    picker.setStartDate(moment());
                    picker.setEndDate(moment());
                    $(this).val('');
                    break;
                }
            }
        }).on('cancel.daterangepicker', function(ev, picker) {
            $(this).val('');
        });
    });


    const centerGps = {{ apartment.centerGps|slice(0, 2)|json_encode|raw }};

    mapboxgl.accessToken = 'pk.eyJ1IjoibGVvLXVyYWhhcmEiLCJhIjoiY2x2MTJrcHJ4MDIwdzJrdXNhcDhjazF4MSJ9.ZJjs_hvEVTuHKAe2CeDGbQ';
    const map = new mapboxgl.Map({
        container: 'map',
        center: centerGps,
        zoom: 16
    });

    const geojson = {
        type: 'FeatureCollection',
        features: [{
            type: 'Feature',
            geometry: {
                type: 'Point',
                coordinates: centerGps
            }
        }]
    };

    geojson.features.forEach(function(marker) {
        var el = document.createElement('div');
        el.className = 'marker';

        new mapboxgl.Marker(el)
            .setLngLat(marker.geometry.coordinates)
            .addTo(map)
    });
</script>
{% endblock %}
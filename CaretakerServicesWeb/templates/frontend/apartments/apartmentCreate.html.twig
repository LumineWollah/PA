<script>
    $(function() {
    var selectedDates = [];

    // Initialisation de la date range picker
    $('input[name="daterange"]').daterangepicker({
        isInvalidDate: function(date) {
            // Vérifier si la date est passée
            if (date.isBefore(moment(), 'day')) {
                return true;
            }

            // Vérifier si la date est déjà sélectionnée dans la liste
            for (var i = 0; i < selectedDates.length; i++) {
                var range = selectedDates[i].split(' à ');
                var startDate = moment(range[0], 'DD/MM/YYYY');
                var endDate = moment(range[1], 'DD/MM/YYYY');
                if (date.isBetween(startDate, endDate, null, '[]')) {
                    return true;
                }
            }
            return false;
        },
        opens: 'left'
    }, function(start, end, label) {
        console.log("ouiii");
        var selectedDate = start.format('DD/MM/YYYY') + ' à ' + end.format('DD/MM/YYYY');
        addDateToList(selectedDate); // Ajouter la date à la liste
    });

    function addDateToList(date) {
        // Création d'un élément span pour la date
        var $dateSpan = $('<span>', {
            text: date
        });

        // Création d'un élément pour la croix de suppression
        var $removeButton = $('<button>', {
            text: 'X',
            click: function() {
                // Supprimer la date de la liste lorsque la croix est cliquée
                $dateSpan.remove();
                var index = selectedDates.indexOf(date);
                if (index > -1) {
                    selectedDates.splice(index, 1);
                }
            }
        });

        // Ajout du bouton de suppression à l'élément span de la date
        $dateSpan.append($removeButton);

        // Ajout de la date à la liste
        $('#selectedDates').append($dateSpan);
        selectedDates.push(date);
    }
});



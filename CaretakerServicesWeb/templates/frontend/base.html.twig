<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <link rel="stylesheet" href={{ asset('styles/frontend/base.css') }}>
        {% block stylesheets %}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg mt-0" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <img src="{{ asset('icons/logo/2_white_mode.png') }}" alt="Logo" width="40" height="40" class="d-inline-block align-text-center">
                </a>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link {% block activeApar %}{% endblock %} me-4" aria-current="page" href={{ path('apartmentsList') }}>Logements</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link me-4" href="#">Services</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link me-4" href="#">Prestataires</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link me-4" href="#">Contact</a>
                        </li>
                    </ul>
                </div>
                {% set id = app.request.cookies.get('id') %}
                {% set pp = app.request.cookies.get('profile_pict') %}

                {% if id is not defined or id is null %}
                    <a href="{{ path('login') }}" class="btn btn-primary me-3 btnConnect">Connexion</a>
                    <a href="{{ path('register') }}" class="btn btn-primary btnRegister">Inscription</a>
                {% else %}
                    <div class="d-flex align-items-center">
                        <span class="username">{{ app.request.cookies.get('firstname') }} {{ app.request.cookies.get('lastname') }}</span>
                        {% if pp is null %}
                            <a href={{ path('myProfile') }}><img src={{ asset('icons/profile_pict_default_white.png') }} alt="Profile Picture" width="40" height="40" class="rounded-circle me-2"></a>
                        {% else %}
                            <a href={{ path('myProfile') }}><img src="{{ pp }}" alt="Profile Picture" width="40" height="40" class="rounded-circle me-2"></a>
                        {% endif %}
                    </div>
                {% endif %}
            </div>
        </nav>
        {% block body %}{% endblock %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>

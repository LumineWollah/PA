{% extends 'frontend/login_register/base.html.twig' %}

{% block stylesheets %}<link href={{ asset('styles/frontend/login_register/register.css') }} rel="stylesheet">{% endblock %}

{% block pageContent %}
<div class="registerCard">
    <div class="titleCard">
        <h2>Inscription</h2>
        <p class="titleDesc">Entrez votre email et votre mot de passe pour vous connecter</p>
    </div>
    {% if not formIsValid %}
    {{form_start(form)}}
        {{form_widget(form.choiceRadio)}}
        <div class="inputDivRow">
            <div class="errors">{%if errorMessages %}<ul>{% for errorMessage in errorMessages %}<li>{{errorMessage}}</li>{% endfor %}</ul>{% endif %}{{form_errors(form.firstname)}}</div>
            <div class="inputDiv">
                <img src="{{ asset('icons/login/email.png') }}" alt="Firstname" class="inputLogo">
                {{form_widget(form.firstname)}}
            </div>
            <div class="errors">{{form_errors(form.lastname)}}</div>
            <div class="inputDiv"> 
                <img src="{{ asset('icons/login/lock.png') }}" alt="Lastname" class="inputLogo">
                {{form_widget(form.lastname)}}
            </div>
        </div>
        <div class="inputDivRow">
            <div class="errors">{{form_errors(form.email)}}</div>
            <div class="inputDiv">
                <img src="{{ asset('icons/login/email.png') }}" alt="Firstname" class="inputLogo">
                {{form_widget(form.email)}}
            </div>
            <div class="errors">{{form_errors(form.telNumber)}}</div>
            <div class="inputDiv"> 
                <img src="{{ asset('icons/login/lock.png') }}" alt="Lastname" class="inputLogo">
                {{form_widget(form.telNumber)}}
            </div>
        </div>
        <div class="inputDivRow">
            <div class="errors">{{form_errors(form.password)}}</div>
            <div class="inputDiv">
                <img src="{{ asset('icons/login/email.png') }}" alt="Firstname" class="inputLogo">
                {{form_widget(form.password)}}
            </div>
            <div class="errors">{{form_errors(form.confirmation)}}</div>
            <div class="inputDiv"> 
                <img src="{{ asset('icons/login/lock.png') }}" alt="Lastname" class="inputLogo">
                {{form_widget(form.confirmation)}}
            </div>
        </div>
        <button type="submit" class="btn registerBtn">Se connecter</button>
    {{form_end(form)}}
    {% endif %}


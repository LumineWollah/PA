                            {% endif %}
                            <td class="action">
                                {% if request.documents is not empty %}
                                    <a href="{{ request.documents[0].url }}" target="_blank" class="btn" style="background-color: #A594F9;"><div class="btnImage"><img style="height:20px;" src={{ asset('icons/crud/documents.png') }}></div></a>
